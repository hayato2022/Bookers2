<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= render 'errors', user: @user %>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <%= f.label :Name %><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", size: 49 %>
      </div>
      <div class="form-group">
        <%= f.label :Image %><br>
        <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.label :Introduction %><br>
        <%= f.text_area :introduction, id:"use_introduction", size: '51x2' %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>