<div class="container px-5 px-sm-0">
  <div class="row">
      <div class="col-md-3">
         <h2>User info</h2>
         <%= image_tag current_user.get_profile_image(100,100) %>
         <table class="table">
          <tbody>
           <tr></tr>
           <tr>
             <th>Name</th>
             <th><%= current_user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= current_user.introduction %></th>
           </tr>
          </tbody>
         </table>
         <div class="row">
           <a class="btn btn-outline-secondary btn-block" href="/users/:id/edit"><i class="fa-solid fa-user-gear"></i></a>
         </div>
         <h2 class="mt-3">New book</h2>
         <%= form_with model: book do |f| %>
         <div class="form-group">
           <%= f.label :title %><br>
           <%= f.text_field :title, size: 30 %>
         </div>
         <div class="form-group">
           <%= f.label :Opinion %><br>
           <%= f.text_area :body, size: "31x2" %>
         </div>
         <div class="form-group">
           <%= f.submit 'Create Book', class: "btn btn-success" %>
         </div>
         <% end %>
      </div>